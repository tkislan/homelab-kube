{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMultipleMajorReleases"
  ],
  "prConcurrentLimit": 2,
  "reviewers": [
    "tkislan"
  ],
  "automerge": true,
  "automergeSchedule": "* 8-21 * * *",
  "prCreation": "not-pending",
  "prNotPendingHours": 1,
  "flux": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "plexinc/pms-docker",
        "linuxserver/openssh-server"
      ],
      "versioning": "loose"
    }
  ]
}
