{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMultipleMajorReleases"
  ],
  "prConcurrentLimit": 5,
  "reviewers": [
    "tkislan"
  ],
  "automerge": true,
  "automergeSchedule": "* 8-21 * * *",
  "prNotPendingHours": 1,
  "flux": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "plexinc/pms-docker",
        "linuxserver/openssh-server"
      ],
      "versioning": "loose"
    },
    {
      "matchPackageNames": [
        "postgres"
      ],
      "major": {
        "enabled": false
      }
    },
    {
      "groupName": "pirate non-major",
      "groupSlug": "pirate-non-major",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "/sonarr/",
        "/radarr/",
        "/bazarr/",
        "/overseerr/",
        "/prowlarr/",
        "/jackett/",
        "/plextraktsync/"
      ]
    }
  ],
  "ignorePaths": [
    "apps/kodi-connect/mongo.yaml"
  ]
}
