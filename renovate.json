{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMultipleMajorReleases"
  ],
  "prConcurrentLimit": 2,
  "reviewers": [
    "tkislan"
  ],
  "automerge": true,
  "automergeSchedule": "* 8-21 * * *",
  "prCreation": "not-pending",
  "prNotPendingHours": 1,
  "flux": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "plexinc/pms-docker",
        "linuxserver/openssh-server"
      ],
      "versioning": "loose"
    },
    {
      "matchDatasources": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "postgres",
        "postgresql"
      ],
      "matchPackagePatterns": [
        "^postgres",
        "^postgresql"
      ],
      "major": {
        "enabled": false
      }
    },
    {
      "groupName": "pirate non-major",
      "groupSlug": "pirate-non-major",
      "matchPackagePatterns": [
        "sonarr",
        "radarr",
        "bazarr",
        "overseerr",
        "prowlarr",
        "jackett"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
